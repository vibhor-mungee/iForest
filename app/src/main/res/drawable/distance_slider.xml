<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/colorGreenTitle" />
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />

                <solid android:color="@color/colorGreenTitle" />
            </shape>
        </clip>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />

                <gradient
                    android:angle="180"
                    android:endColor="@color/colorGreenSecondTitle"
                    android:startColor="@color/colorGreenTitle" />
            </shape>
        </clip>
    </item>

</layer-list>