<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDC63F"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ioraecological.ifp.ContributeActivity"
    tools:showIn="@layout/activity_contribute">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/pictureImageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/uplaod_image_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Upload Picture"
        android:id="@+id/textView24"
        android:layout_below="@+id/pictureImageView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/contentImageView"
        android:layout_below="@+id/textView24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/upload_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Upload Content"
        android:id="@+id/textView25"
        android:layout_below="@+id/contentImageView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"/>


</RelativeLayout>
