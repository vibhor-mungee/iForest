<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#71CF3D"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ioraecological.ifp.MeetLocationActivity"
    tools:showIn="@layout/activity_meet_location">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:id="@+id/textView22"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp" />

    <TextView
        android:id="@+id/location_select_1"
        android:layout_width="180dp"
        android:layout_height="33dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/rounded_border"
        android:padding="5dp"
        android:layout_marginLeft="140dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/navigate_icon" />

    <View
        android:id="@+id/horizontalLine2"
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="138dp"
        android:background="@color/dividerGreen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Types of\nCommunity"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:id="@+id/textView23"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="155dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/from_date_picker"
        android:layout_width="180dp"
        android:layout_height="33dp"
        android:background="@drawable/rounded_border"
        android:drawableRight="@drawable/drop_down_icon"
        android:padding="5dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="140dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        android:id="@+id/horizontalLine3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="205dp"
        android:background="@color/dividerGreen" />
</RelativeLayout>
